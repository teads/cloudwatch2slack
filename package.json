{
  "name": "cloudwatch2slack",
  "version": "0.1.0",
  "description": "AWS Lambda function to send Cloudwatch alarms to Slack",
  "main": "index.js",
  "author": "Pierre Dal-Pra<pierre.dalpra@teads.tv>",
  "repository": "teads/cloudwatch2slack",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "webpack --progress --config webpack.config.ts",
    "test": "nyc mocha -r ts-node/register --ui mocha-typescript test/*.ts",
    "zip": "bestzip dist/archive.zip dist/files/*",
    "package": "npm run build && npm run zip"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "cobertura",
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/aws-lambda": "0.0.16",
    "@types/chai": "^4.0.2",
    "@types/lodash": "^4.14.70",
    "@types/node": "^8.0.19",
    "@types/node-slack": "0.0.29",
    "@types/webpack": "^3.0.5",
    "awesome-typescript-loader": "^3.2.3",
    "babel-core": "^6.26.0",
    "bestzip": "^1.1.4",
    "chai": "^4.1.0",
    "mocha": "^3.4.2",
    "mocha-typescript": "^1.1.7",
    "nyc": "^11.1.0",
    "rimraf": "^2.6.1",
    "source-map-support": "^0.4.15",
    "ts-node": "^3.3.0",
    "tsfmt-loader": "0.0.1",
    "tslint": "^5.5.0",
    "tslint-loader": "^3.5.3",
    "tslint-sonarts": "^0.3.0",
    "typescript": "^2.4.2",
    "typescript-formatter": "^5.2.0",
    "webpack": "^3.4.1"
  },
  "dependencies": {
    "aws-sdk": "^2.92.0",
    "lodash": "^4.17.4",
    "moment": "^2.0.0",
    "node-slack": "0.0.7"
  }
}
